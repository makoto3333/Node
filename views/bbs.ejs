<% include ./header%>

<ul>
	<% for (var i=0; i<posts.length; i++) { %>
	<li>
	    <a href="/posts/<%= i %>"><%= posts[i].title %></a>
	    <div class="row">
		    <a href="/posts/<%= i %>/edit"  class="btn btn-primary btn-sm">Edit</a>
		    <form method="post" action="/posts/<%= i %>">
		    <input type="submit" class="btn btn-danger btn-sm offset-md-4" value="del">
		    <input type="hidden" name="_method" value="delete">
		    <input type="hidden" name="id" value="<%= i %>">
		    </form>
	    </div>
	</li>
	<% } %>
</ul>
<p><a href="/posts/new">Add new</a></p>
<% include ./footer%>

